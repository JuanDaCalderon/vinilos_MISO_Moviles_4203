<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/AlbumsFragment">

    <fragment
        android:id="@+id/TracksFragment"
        android:name="com.example.vinilos.ui.tracks.TracksFragment"
        android:label="@string/title_tracks"
        tools:layout="@layout/fragment_tracks" />

    <fragment
        android:id="@+id/AlbumsFragment"
        android:name="com.example.vinilos.ui.AlbumsFragment"
        android:label="@string/title_albums"
        tools:layout="@layout/fragment_albums">
        <action
            android:id="@+id/action_AlbumsFragment_to_AlbumsDetalleFragment"
            app:destination="@id/AlbumsDetalleFragment" />
    </fragment>

    <fragment
        android:id="@+id/ArtistasFragment"
        android:name="com.example.vinilos.ui.artistas.ArtistasFragment"
        android:label="@string/title_artistas"
        tools:layout="@layout/fragment_artistas" />

    <fragment
        android:id="@+id/ColeccionistasFragment"
        android:name="com.example.vinilos.ui.coleccionistas.ColeccionistasFragment"
        android:label="@string/title_coleccionistas"
        tools:layout="@layout/fragment_coleccionistas" />

    <fragment
        android:id="@+id/AlbumsDetalleFragment"
        android:name="com.example.vinilos.ui.AlbumsDetalleFragment"
        android:label="@string/title_coleccionistas"
        tools:layout="@layout/fragment_detalle_album" >
        <argument
            android:name="albumId"
            app:argType="integer" />
    </fragment>

</navigation>